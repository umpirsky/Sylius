<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="hypebeast.settings_schema.homepagebanners" class="Hypebeast\Bundle\WebBundle\Settings\HomepageBannerSettingsSchema">
            <tag name="sylius.settings_schema" namespace="homepagebanners" />
        </service>

        <!-- Checkout Step -->
        <service id="hypebeast.checkout.delivery_and_payment" class="Hypebeast\Bundle\CoreBundle\Checkout\Step\DeliveryAndPaymentStep">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <tag name="sylius.process.step" alias="hypebeast_checkout_delivery_and_payment" />
        </service>
        <service id="hypebeast.form.type.delivery_and_payment.shipping" class="Hypebeast\Bundle\CoreBundle\Form\Type\Checkout\DeliveryAndPaymentStepType">
            <argument>%sylius.model.cart.class%</argument>
            <tag name="form.type" alias="hypebeast_checkout_delivery_and_payment" />
        </service>

        <!-- Gift card -->
        <service id="sylius.manager.gift_card" alias="doctrine.orm.entity_manager" />
        <service id="sylius.controller.gift_card" class="Sylius\Bundle\ResourceBundle\Controller\ResourceController">
            <argument>sylius</argument>
            <argument>gift_card</argument>
            <argument>SyliusWebBundle:GiftCard</argument>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
        <service id="sylius.repository.gift_card" class="Sylius\Bundle\ResourceBundle\Doctrine\ORM\EntityRepository">
            <argument type="service" id="sylius.manager.gift_card" />
            <argument type="service">
                <service
                    factory-service="sylius.manager.gift_card"
                    factory-method="getClassMetadata"
                    class="Doctrine\ORM\Mapping\ClassMetadata"
                >
                    <argument>Hypebeast\Bundle\CoreBundle\Entity\GiftCard</argument>
                </service>
            </argument>
        </service>
        <service id="sylius.manager.reward" alias="doctrine.orm.entity_manager" />
        <service id="sylius.repository.reward" class="Hypebeast\Bundle\CoreBundle\Repository\RewardRepository">
            <argument type="service" id="sylius.manager.reward" />
            <argument type="service">
                <service
                    factory-service="sylius.manager.reward"
                    factory-method="getClassMetadata"
                    class="Doctrine\ORM\Mapping\ClassMetadata"
                >
                    <argument>Hypebeast\Bundle\CoreBundle\Entity\Reward</argument>
                </service>
            </argument>
        </service>
        <service id="sylius.elasticsearch.provider.product" class="Hypebeast\Bundle\CoreBundle\Elasticsearch\Provider\ProductProvider">
            <argument type="service" id="fos_elastica.index.store.product" />
            <argument type="service" id="sylius.repository.product" />
            <tag name="fos_elastica.provider" index="store" type="product" />
        </service>
        <service id="sylius.form.type.gift_card" class="Hypebeast\Bundle\CoreBundle\Form\Type\GiftCardType">
            <tag name="form.type" alias="sylius_gift_card" />
        </service>
        <service id="sylius.form.type.gift_card_front" class="Hypebeast\Bundle\CoreBundle\Form\Type\GiftCardFrontType">
            <tag name="form.type" alias="sylius_gift_card_front" />
        </service>
        <service id="sylius.processor.gift_card" class="Hypebeast\Bundle\CoreBundle\Processor\GiftCardProcessor">
            <argument type="service" id="sylius.mailer.gift_card" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="sylius.repository.gift_card" />
        </service>
        <service id="sylius.processor.vip" class="Hypebeast\Bundle\CoreBundle\Processor\VipProcessor">
            <argument type="service" id="security.context" />
            <argument type="service" id="sylius.repository.reward" />
        </service>
        <service id="sylius.mailer.gift_card" class="Hypebeast\Bundle\CoreBundle\Mailer\GiftCardMailer">
            <argument type="service" id="sylius.mailer" />
            <argument type="collection">
                <argument key="template">SyliusWebBundle:Frontend/Email:giftCard.html.twig</argument>
                <argument key="from_email">%sylius.mailer.gift_card.email.from_email%</argument>
            </argument>
        </service>
        <service id="sylius.builder.promotion" class="Hypebeast\Bundle\CoreBundle\Builder\PromotionBuilder">
            <argument type="service" id="sylius.manager.promotion" />
            <argument type="service" id="sylius.repository.promotion" />
            <argument type="service" id="sylius.repository.promotion_action" />
            <argument type="service" id="sylius.repository.promotion_coupon" />
        </service>
        <service id="sylius.builder.reward" class="Hypebeast\Bundle\CoreBundle\Builder\RewardBuilder">
            <argument type="service" id="sylius.manager.reward" />
            <argument type="service" id="sylius.repository.reward" />
            <argument type="service" id="security.context" />
        </service>
        <service id="sylius.promotion_action.gift_card_discount" class="Hypebeast\Bundle\CoreBundle\Promotion\Action\GiftCardDiscountAction">
            <argument type="service" id="sylius.repository.adjustment" />
            <argument type="service" id="sylius.repository.gift_card" />
            <tag name="sylius.promotion_action" type="gift_card_discount" label="Gift card discount" />
        </service>
        <service id="sylius.form.type.promotion_action.no_configuration" class="Hypebeast\Bundle\CoreBundle\Form\Type\Promotion\Action\NoConfigurationType">
            <tag name="form.type" alias="sylius_promotion_action_no_configuration" />
        </service>
        <service id="sylius.listener.elasticsearch" class="Hypebeast\Bundle\CoreBundle\EventListener\ElasticsearchListener">
            <argument type="service" id="fos_elastica.index.store.product" />
            <tag name="kernel.event_listener" event="sylius.product.post_create" method="onProductUpdate" />
            <tag name="kernel.event_listener" event="sylius.product.post_update" method="onProductUpdate" />
            <tag name="kernel.event_listener" event="sylius.product.post_delete" method="onProductDelete" />
        </service>
        <service id="sylius.listener.order_gift_card" class="Hypebeast\Bundle\CoreBundle\EventListener\OrderGiftCardListener">
            <argument type="service" id="service_container"/>
            <tag name="kernel.event_listener" event="sylius.cart_item.add.initialize" method="onCartItemAddInitialize" />
            <tag name="kernel.event_listener" event="sylius.cart_item.remove.initialize" method="onCartItemRemoveInitialize" />
            <tag name="kernel.event_listener" event="sylius.cart_clear.initialize" method="onCartClearInitialize" />
            <tag name="kernel.event_listener" event="sylius.checkout.finalize.pre_complete" method="onCheckoutFinalizePreComplete" />
            <tag name="kernel.event_listener" event="sylius.payment.post_state_change" method="onPaymentPostStateChange" />
        </service>
        <service id="hypebeast.listener.checkout" class="Hypebeast\Bundle\CoreBundle\EventListener\CheckoutListener">
            <argument type="service" id="sylius.hypebeast.order.state.processor" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="sylius.repository.order" />
            <tag name="kernel.event_listener" event="sylius.checkout.addressing.initialize" method="onCheckoutAddressingInitialize" />
            <tag name="kernel.event_listener" event="sylius.payment.post_state_change" method="onPaymentPostStateChange" />
        </service>
        <service id="hypebeast.listener.reward" class="Hypebeast\Bundle\CoreBundle\EventListener\RewardListener">
            <argument type="service" id="security.context" />
            <argument type="service" id="sylius.builder.reward" />
            <argument type="service" id="sylius.repository.order" />
            <tag name="kernel.event_listener" event="sylius.payment.post_state_change" method="onPaymentPostStateChange" />
        </service>
        <service id="hypebeast.listener.vip" class="Hypebeast\Bundle\CoreBundle\EventListener\VipListener">
            <argument type="service" id="sylius.processor.vip" />
            <tag name="kernel.event_listener" event="sylius.payment.post_state_change" method="onPaymentPostStateChange" />
        </service>
        <service id="sylius.checker.vip" class="Hypebeast\Bundle\CoreBundle\Promotion\Checker\VipRuleChecker">
            <tag name="sylius.promotion_rule_checker" type="vip" label="VIP user" />
        </service>
        <service id="sylius.promotion_action.percentage_discount_ignore_on_sale" class="Hypebeast\Bundle\CoreBundle\Promotion\Action\PercentageDiscountIgnoreOnSaleAction">
            <argument type="service" id="sylius.repository.adjustment" />
            <tag name="sylius.promotion_action" type="percentage_discount_ignore_on_sale" label="Percentage discount ignore on sale" />
        </service>
        <service id="sylius.form.type.promotion_action.percentage_discount_ignore_on_sale_configuration" class="Hypebeast\Bundle\CoreBundle\Form\Type\Promotion\Action\PercentageDiscountIgnoreOnSaleConfigurationType">
            <argument>%sylius.validation_group.promotion_action_percentage_discount_configuration%</argument>
            <tag name="form.type" alias="sylius_promotion_action_percentage_discount_ignore_on_sale_configuration" />
        </service>
        <service id="hypebeast.listener.reward" class="Hypebeast\Bundle\CoreBundle\EventListener\RewardListener">
            <argument type="service" id="security.context" />
            <argument type="service" id="sylius.builder.reward" />
            <argument type="service" id="sylius.repository.order" />
            <tag name="kernel.event_listener" event="sylius.payment.post_state_change" method="onPaymentPostStateChange" />
        </service>
    </services>

</container>
