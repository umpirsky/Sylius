{% extends 'HypebeastWebBundle:Frontend:Checkout/layout.html.twig' %}

{% block content %}
    <form method="post"
          action="{{ path('sylius_checkout_forward', {'stepName': context.currentStep.name}) }}"
          novalidate>

        {{ form_errors(form) }}
        {{ bootstrap_set_style('') }}

        {# Shipments #}
        {% for shipment in order.shipments %}
            {{ form_row(form.shipments[loop.index0].method) }}
        {% endfor %}

        {# Payment Method #}
        {{ form_row(form.paymentMethod) }}

        <button type="submit" class="btn btn-primary">{{ 'sylius.checkout.forward'|trans }}</button>

        {{ form_widget(form._token) }}
    </form>
{% endblock %}
