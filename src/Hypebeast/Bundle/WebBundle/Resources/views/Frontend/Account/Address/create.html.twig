{% from 'SyliusWebBundle:Frontend/Macros:actions.html.twig' import create %}
{% extends 'SyliusWebBundle:Frontend/Account:layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts output='assets/compiled/backend_province.js'
    '@SyliusWebBundle/Resources/assets/js/province-choices.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>{{ 'sylius.account.address.create'|trans|title }}</h1>
    </div>

    <form action="{{ path('sylius_account_address_create') }}" method="post" novalidate>
        {{ bootstrap_set_style('') }}
        {% include 'SyliusWebBundle:Frontend/Form:_address.html.twig' %}

        <button type="submit" class="btn btn-primary">{{ 'sylius.save_changes'|trans|title }}</button>
    </form>
{% endblock %}
