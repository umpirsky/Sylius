<div class="row">
    <div class="col-sm-6">
        {{ form_row(form.firstName) }}
    </div>
    <div class="col-sm-6">
        {{ form_row(form.lastName) }}
    </div>
</div>

{{ form_row(form.street) }}

<div class="row">
    <div class="col-sm-6">
        {{ form_row(form.city) }}
    </div>
    <div class="col-sm-6">
        {{ form_row(form.postcode) }}
    </div>
</div>

{{ form_row(form.country, {'attr': {'class': 'select2 country-select'}}) }}

<div class="province-container" data-url="{{ path('sylius_province_choice_form') }}">
    {% if form.province is defined %}
        {{ form_row(form.province, {'attr': {'class': 'select2'}}) }}
    {% endif %}
</div>

{{ form_rest(form) }}
