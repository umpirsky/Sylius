{% set product = variant.product %}
{% set brand = sylius_product_brand(product) %}

<div class="media">
    <div class="pull-left">
        <img src="{{ product.image ? product.image.path|imagine_filter('store_thumbnail') : 'http://placehold.it/90x60' }}"
             alt="{{ product.name }}"
             class="media-object image"/>
    </div>
    <div class="media-body">
        <h5 class="brand">{{ brand.name }}</h5>
        <h4 class="name">{{ product.name }}</h4>
        {% if variant.presentation is not empty %}
            <strong>{{ variant.presentation }}</strong>
        {% elseif product.hasOptions %}
            <ul class="options list-unstyled">
                {% for option in variant.options %}
                    <li><strong>{{ option.presentation }}</strong>: {{ option.value }}</li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
</div>