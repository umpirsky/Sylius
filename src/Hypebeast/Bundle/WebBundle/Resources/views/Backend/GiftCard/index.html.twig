{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% from 'SyliusWebBundle:Backend/Macros:misc.html.twig' import pagination %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}

{% block content %}
<div class="page-header">
    <div class="actions-menu">
        {{ buttons.create(path('sylius_backend_gift_card_create'), 'sylius.gift_card.create'|trans) }}
    </div>
    <h1><i class="glyphicon glyphicon-gift"></i> {{ 'sylius.gift_card.index_header'|trans|raw }}</h1>
</div>

{{ pagination(gift_cards) }}

{% if gift_cards|length > 0 %}
    <table class="table">
        <thead>
            <tr>
                <th>{{ sylius_resource_sort('id', '#id') }}</th>
                <th>{{ sylius_resource_sort('name', 'sylius.gift_card.name'|trans) }}</th>
                <th>{{ sylius_resource_sort('email', 'sylius.gift_card.email'|trans) }}</th>
                <th>{{ sylius_resource_sort('value', 'sylius.gift_card.value'|trans) }}</th>
                <th>{{ sylius_resource_sort('status', 'sylius.gift_card.status'|trans) }}</th>
                <th>{{ sylius_resource_sort('createdAt', 'sylius.gift_card.created_at'|trans) }}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for gift_card in gift_cards %}
            <tr>
                <td>{{ gift_card.id }}</td>
                <td>{{ gift_card.name }}</td>
                <td><a href="mailto:{{ gift_card.email }}">{{ gift_card.email }}</a></td>
                <td>{{ gift_card.value|sylius_price }}</td>
                <td>
                    <span class="label label-{{ constant('Hypebeast\\Bundle\\CoreBundle\\Entity\\GiftCard::STATUS_SENT') == gift_card.status ? 'success' : 'default'}}">
                        {{ gift_card.statusLabel|trans }}
                    </span>
                </td>
                <td>{{ gift_card.createdAt|date }}</td>
                <td class="actions text-right">
                    <div class="btn-group">
                        {{ buttons.show(path('sylius_backend_gift_card_show', {'id': gift_card.id})) }}
                        {{ buttons.edit(path('sylius_backend_gift_card_update', {'id': gift_card.id})) }}
                        {{ buttons.delete(path('sylius_backend_gift_card_delete', {'id': gift_card.id})) }}
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    {{ alerts.info('sylius.gift_card.no_results'|trans) }}
{% endif %}

{{ pagination(gift_cards) }}

{% endblock %}
