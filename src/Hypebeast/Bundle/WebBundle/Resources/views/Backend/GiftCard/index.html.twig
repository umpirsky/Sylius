{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% from 'SyliusWebBundle:Backend/Macros:misc.html.twig' import pagination %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}

{% block content %}
<div class="page-header">
    <h1><i class="glyphicon glyphicon-gift"></i> {{ 'sylius.gift_card.index_header'|trans|raw }}</h1>
</div>

{{ pagination(giftCards) }}

{% if giftCards|length > 0 %}
    <table class="table">
        <thead>
            <tr>
                <th>{{ sylius_resource_sort('id', '#id') }}</th>
                <th>{{ sylius_resource_sort('name', 'sylius.gift_card.name'|trans) }}</th>
                <th>{{ sylius_resource_sort('email', 'sylius.gift_card.email'|trans) }}</th>
                <th>{{ sylius_resource_sort('value', 'sylius.gift_card.value'|trans) }}</th>
                <th>{{ sylius_resource_sort('status', 'sylius.gift_card.status'|trans) }}</th>
                <th>{{ sylius_resource_sort('createdAt', 'sylius.gift_card.created_at'|trans) }}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for giftCard in giftCards %}
            <tr>
                <td>{{ giftCard.id }}</td>
                <td>{{ giftCard.name }}</td>
                <td><a href="mailto:{{ giftCard.email }}">{{ giftCard.email }}</a></td>
                <td>{{ giftCard.value|sylius_price }}</td>
                <td>
                    <span class="label label-{{ constant('Hypebeast\\Bundle\\CoreBundle\\Entity\\GiftCard::STATUS_SENT') == giftCard.status ? 'success' : 'default'}}">
                        {{ giftCard.statusLabel|trans }}
                    </span>
                </td>
                <td>{{ giftCard.createdAt|date }}</td>
                <td>
                    <div class="pull-right">
                        {{ buttons.show(path('sylius_backend_gift_card_show', {'id': giftCard.id})) }}
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    {{ alerts.info('sylius.gift_card.no_results'|trans) }}
{% endif %}

{{ pagination(giftCards) }}

{% endblock %}
