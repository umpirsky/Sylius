{% from 'SyliusResourceBundle:Macros:actions.html.twig' import create %}

{% block content %}
<div class="page-header">
    <h1><i class="glyphicon glyphicon-plus"></i> {{ 'sylius.gift_card.create_header'|trans|raw }}</h1>
</div>

