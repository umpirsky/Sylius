{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% from 'SyliusWebBundle:Backend/Macros:misc.html.twig' import pagination %}
{% from 'SyliusWebBundle:Backend/Product:macros.html.twig' import list %}

{% block stylesheets %}
{{ parent() }}
{% stylesheets
    '@HypebeastWebBundle/Resources/assets/css/bootstrap-editable.css'
%}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
{% endstylesheets %}
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        var sylius_xeditable_price_tpl = '{{ form_widget(form.masterVariant) }}';
    </script>
    {{ parent() }}
    {% javascripts
        '@HypebeastWebBundle/Resources/assets/js/bootstrap-editable.js'
        '@SyliusWebBundle/Resources/assets/js/price.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script type="text/javascript">
        (function ($) {
            $('a.editable').editable();
        }(window.jQuery));
    </script>
{% endblock %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.assortment'|trans }}</li>
    <li>{{ 'sylius.breadcrumb.product.index'|trans }}</a></li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <div class="actions-menu">
        {{ buttons.create(path('sylius_backend_product_create'), 'sylius.product.create'|trans) }}
        {{ buttons.manage(path('sylius_backend_option_index'), 'sylius.option.manage'|trans) }}
        {{ buttons.manage(path('sylius_backend_property_index'), 'sylius.property.manage'|trans) }}
    </div>
    <h1><i class="glyphicon glyphicon-th-list"></i> {{ 'sylius.product.index_header'|trans|raw }}</h1>
</div>

{% render(controller('sylius.controller.backend.form:filterAction', {'type': 'sylius_product_filter', 'template': 'SyliusWebBundle:Backend/Product:filterForm.html.twig', 'criteria': app.request.query.get('criteria')})) %}

{{ pagination(products) }}
{{ list(products) }}
{{ pagination(products) }}

{% endblock %}
