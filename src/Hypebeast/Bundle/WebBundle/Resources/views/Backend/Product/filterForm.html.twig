{% form_theme form 'HypebeastWebBundle:Backend:filterForms.html.twig' %}

<form method="get" action="{{ path('sylius_backend_product_index') }}" class="form-inline form-filter">
{{ form_row(form.name) }}
{{ form_row(form.sku) }}
{{ form_row(form.taxons) }}
{{ form_row(form.sale) }}
<button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-search"></i> {{ 'sylius.filter'|trans }}</button>
</form>
